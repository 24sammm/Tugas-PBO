<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Produk</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f7f3e9 30%, #f0e0d2 100%);
            color: #333;
            padding: 20px;
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .navbar {
            background: linear-gradient(135deg, #8b5e34, #5a3920);
            padding: 10px 380px; /* Adjusted padding for a neater appearance */
            font-size: 24px;
            font-weight: bold;
            color: #fff;
            position: absolute;
            top: 0;
            z-index: 1000;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            border-radius: 0 0 20px 20px;
        }

        .navbar-brand {
            font-size: 28px;
            font-weight: bold;
        }

        .navbar a {
            color: #fff;
            text-decoration: none;
            padding: 0 15px; /* Adjusted padding for consistency */
            transition: color 0.3s ease;
            font-weight: 500;
        }

        .navbar a:hover {
            color: #f1c27d;
            text-shadow: 0 0 5px #fff;
        }

        button {
            background: linear-gradient(135deg, #8b5e34, #6b4322);
            color: #fff;
            border: none;
            padding: 12px 25px;
            cursor: pointer;
            border-radius: 30px;
            font-size: 16px;
            transition: background-color 0.3s ease, transform 0.3s ease;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        button:hover {
            background-color: #5a3920;
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.25);
        }

        form {
            background-color: #fff;
            padding: 35px;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            margin-bottom: 50px;
            transition: all 0.3s ease;
            border-left: 5px solid #8b5e34;
        }

        form:hover {
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
            transform: scale(1.02);
        }

        input[type="text"], input[type="number"] {
            width: 100%;
            padding: 15px;
            margin: 12px 0;
            border-radius: 12px;
            border: 1px solid #ccc;
            transition: border-color 0.3s ease;
        }

        input[type="text"]:focus, input[type="number"]:focus {
            border-color: #8b5e34;
            outline: none;
        }

        label {
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 50px;
            background-color: #fff;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        table:hover {
            transform: translateY(-5px);
        }

        table th, table td {
            padding: 20px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        table th {
            background-color: #8b5e34;
            color: #060606;
            text-transform: uppercase;
        }

        table tr:hover {
            background-color: #f5f5f5;
        }

        table td a {
            text-decoration: none;
            color: #8b5e34;
            padding: 7px 15px;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        table td a:hover {
            background-color: #e0c4a8;
            transform: translateY(-3px);
        }

        .card {
            background-color: #fff;
            padding: 25px;
            border-radius: 20px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            margin-bottom: 40px;
            border-left: 5px solid #8b5e34;
        }

        .card:hover {
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
            transform: translateY(-5px);
        }

        .card h5 {
            font-size: 24px;
            margin-bottom: 15px;
            color: #8b5e34;
        }

        .card p {
            color: #666;
        }

        .footer {
            background: linear-gradient(135deg, #8b5e34, #5a3920);
            color: #fff;
            text-align: center;
            padding: 20px;
            position: fixed;
            bottom: 0;
            width: 100%;
            left: 0;
            font-size: 14px;
            z-index: 999;
            box-shadow: 0 -4px 10px rgba(0, 0, 0, 0.2);
        }

        @media (max-width: 768px) {
            .navbar {
                font-size: 20px;
            }

            button {
                width: 100%;
                margin-bottom: 10px;
            }

            .card {
                padding: 20px;
            }

            table, form {
                width: 100%;
                margin: 0;
            }

            .footer {
                font-size: 12px;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand">Data Perlengkapan Sekolah SD</a>
            
        </div>
    </nav>

    <div class="container mt-4"> 
        <h1>Daftar Produk</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nama Produk</th>
                    <th>Harga</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td><%= product.id %></td>
                        <td><%= product.name %></td>
                        <td>Rp. <%= product.price %></td>
                        <td>
                            <a href="/edit/<%= product.id %>" class="btn btn-warning">Edit</a>
                            <a href="/delete/<%= product.id %>" class="btn btn-danger">Hapus</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <h2>Tambah Produk</h2>
        <form action="/add" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Nama Produk</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Harga Produk</label>
                <input type="number" class="form-control" id="price" name="price" required>
            </div>
            <button type="submit" class="btn">Tambah</button>

            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                Format Harga pakai 2 digit desimal!
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
