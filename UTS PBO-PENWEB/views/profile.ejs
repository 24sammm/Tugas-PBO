<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/styles.css">
    <title>Profile</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            background: url('https://cdn.wallpaper.tn/large/4K-Music-Studio-Wallpaper-188408.jpg') no-repeat center center/cover;
            color: #fff;
            overflow-y: auto;
            padding: 20px;
        }

        header {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background: rgba(0, 0, 0, 0.7);
            color: #fff;
            box-shadow: 0 0 10px rgb(249, 55, 55);
            margin-bottom: 20px;
        }

        .header-title {
            font-size: 1.5rem;
            color: rgb(218, 64, 208);
            text-shadow: 0 0 10px #ff0, 0 0 20px #ff0;
        }

        .logout {
            color: #0ff;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s;
        }

        .logout:hover {
            color: #ff5050;
        }

        .container {
            width: 1000px;
            padding: 2rem;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .card {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 0 10px rgb(249, 55, 55);
            color: #fff;
        }

        .welcome-card {
            text-align: center;
        }

        .scales-row {
            display: flex;
            justify-content: space-between;
            gap: 20px;
        }

        .side-card {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .preview-card {
            flex: 2;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h2, h3 {
            color: rgb(96, 35, 92);
            text-shadow: 0 0 10px #ff0, 0 0 20px #ff0;
            margin-bottom: 20px;
        }

        button {
            padding: 10px;
            font-size: 1rem;
            color: #000;
            background: #0ff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 0 10px rgb(255, 28, 28), 0 0 20px rgb(255, 32, 32);
            margin-top: 10px;
        }

        button:hover {
            background: #000;
            color: #0ff;
            box-shadow: 0 0 20px #0ff, 0 0 30px #0ff;
            transform: scale(1.05);
        }

        .delete-btn {
            background: #f00;
            color: #fff;
        }

        .delete-btn:hover {
            background: #ff5050;
        }

        .photo-gallery {
            text-align: center;
        }

        .photo-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: center;
        }

        .photo img {
            width: 200px;
            height: auto;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .photo img:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.8);
        }

        .schedules-section {
        width: 100%;
        max-width: 1000px;
        margin: 20px auto;
        padding: 20px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        color: #fff;
        box-shadow: 0 0 10px rgb(249, 55, 55);
    }

    .schedules-section h2,
    .schedules-section h3 {
        color: rgb(96, 35, 92);
        text-shadow: 0 0 10px #ff0, 0 0 20px #ff0;
        margin-bottom: 15px;
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }

    table th,
    table td {
        padding: 10px;
        text-align: center;
    }

    table th {
        background-color: rgba(0, 0, 0, 0.8);
        color: #0ff;
        text-transform: uppercase;
        font-weight: bold;
        border-bottom: 2px solid #0ff;
    }

    table tr:nth-child(even) {
        background-color: rgba(255, 255, 255, 0.05);
    }

    table tr:nth-child(odd) {
        background-color: rgba(0, 0, 0, 0.6);
    }

    table td {
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .schedules-section form {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 15px;
    }

    .schedules-section form input[type="text"],
    .schedules-section form select,
    .schedules-section form input[type="date"],
    .schedules-section form input[type="time"],
    .schedules-section form textarea {
        flex: 1;
        padding: 10px;
        background: rgba(0, 0, 0, 0.8);
        border: none;
        border-radius: 5px;
        color: #fff;
        box-shadow: 0 0 5px rgba(255, 255, 255, 0.2);
    }

    .schedules-section form textarea {
        min-height: 80px;
    }

    .schedules-section form button {
        flex: 1;
        padding: 10px;
        font-size: 1rem;
        color: #000;
        background: #0ff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 0 10px rgb(255, 28, 28), 0 0 20px rgb(255, 32, 32);
    }

    .schedules-section form button:hover {
        background: #000;
        color: #0ff;
        box-shadow: 0 0 20px #0ff, 0 0 30px #0ff;
        transform: scale(1.05);
    }

    .schedules-section table button {
        padding: 5px 10px;
        color: #fff;
        background: #333;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .schedules-section table button:hover {
        background: #0ff;
        color: #000;
    }

    .schedules-section .delete-btn {
        background: #f00;
    }

    .schedules-section .delete-btn:hover {
        background: #ff5050;
    }

.achievements-section {
    width: 100%;
    max-width: 1000px;
    margin: 20px auto;
    padding: 20px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: #fff;
    box-shadow: 0 0 10px rgb(249, 55, 55);
}

.achievements-section h2,
.achievements-section h3 {
    color: rgb(96, 35, 92);
    text-shadow: 0 0 10px #ff0, 0 0 20px #ff0;
    margin-bottom: 15px;
    text-align: center;
}

.achievements-section table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 15px;
}

.achievements-section table th,
.achievements-section table td {
    padding: 10px;
    text-align: center;
}

.achievements-section table th {
    background-color: rgba(0, 0, 0, 0.8);
    color: #0ff;
    text-transform: uppercase;
    font-weight: bold;
    border-bottom: 2px solid #0ff;
}

.achievements-section table tr:nth-child(even) {
    background-color: rgba(255, 255, 255, 0.05);
}

.achievements-section table tr:nth-child(odd) {
    background-color: rgba(0, 0, 0, 0.6);
}

.achievements-section table td {
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}

.achievements-section form {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-top: 15px;
}

.achievements-section form input[type="text"],
.achievements-section form textarea,
.achievements-section form input[type="date"] {
    padding: 10px;
    background: rgba(0, 0, 0, 0.8);
    border: none;
    border-radius: 5px;
    color: #fff;
    box-shadow: 0 0 5px rgba(255, 255, 255, 0.2);
}

.achievements-section form textarea {
    min-height: 80px;
}

.achievements-section form button {
    padding: 10px;
    font-size: 1rem;
    color: #000;
    background: #0ff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 0 10px rgb(255, 28, 28), 0 0 20px rgb(255, 32, 32);
}

.achievements-section form button:hover {
    background: #000;
    color: #0ff;
    box-shadow: 0 0 20px #0ff, 0 0 30px #0ff;
    transform: scale(1.05);
}

    </style>
</head>
<body>
    <header>
        <div class="header-title">Music Learning</div>
        <form id="logout-form" action="/logout" method="POST" style="display: none;">
            <button type="submit">Logout</button>
        </form>
        <a href="#" class="logout" onclick="event.preventDefault(); document.getElementById('logout-form').submit();">Logout</a>
    </header>
    
    <div class="container">
       
        <div class="welcome-card card">
            <h2>Welcome, <%= user.name %></h2>
            <div class="user-info">
                <p><strong>NIM:</strong> <%= user.nim %></p>
                <p><strong>Major:</strong> <%= user.major %></p>
                <p><strong>Place and Date of Birth:</strong> <%= user.birth_place_date %></p>
                <p><strong>Address:</strong> <%= user.address %></p>
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Musical Instrument:</strong> <%= user.instrument %></p>
            </div>
            <button onclick="openModal('update-profile-modal')">Edit Profile</button>
            <form action="/profile/delete" method="POST" style="display:inline;">
                <button type="submit" class="delete-btn">Delete Profile</button>
            </form>
        </div>

        <div class="modal" id="update-profile-modal">
            <div class="modal-content">
                <button class="close-btn" onclick="closeModal('update-profile-modal')">&times;</button>
                <h3>Update Profile</h3>
                <form action="/profile/update" method="POST">
                    <input type="text" name="name" value="<%= user.name %>" required>
                    <input type="text" name="nim" value="<%= user.nim %>" required>
                    <input type="text" name="major" value="<%= user.major %>" required>
                    <input type="text" name="birth_place_date" value="<%= user.birth_place_date %>" required>
                    <input type="text" name="address" value="<%= user.address %>" required>
                    <input type="email" name="email" value="<%= user.email %>" required>
                    <input type="text" name="instrument" value="<%= user.instrument %>" required>
                    <button type="submit">Save Changes</button>
                </form>
                
            </div>
        </div>

        <div class="scales-row">
            <div class="side-card card">
                <h3>Add New Scale</h3>
                <button onclick="openModal('add-modal')">Add New Scale</button>
                <div class="modal" id="add-modal">
                    <div class="modal-content">
                        <button class="close-btn" onclick="closeModal('add-modal')">&times;</button>
                        <h3>Add New Scale</h3>
                        <form action="/scales/add" method="POST">
                            <input type="text" name="name" placeholder="Scale Name" required>
                            <input type="text" name="instrument" placeholder="Instrument" required>
                            <input type="text" name="base_note" placeholder="Base Note" required>
                            <input type="text" name="scale_type" placeholder="Scale Type" required>
                            <input type="text" name="difficulty" placeholder="Difficulty" required>
                            <textarea name="diagram" placeholder="Diagram"></textarea>
                            <input type="number" step="0.01" name="progress" placeholder="Progress" required>
                            <button type="submit">Add Scale</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="preview-card card">
                <h3>Your Scales</h3>
                <div class="scales-list">
                    <% scales.forEach(scale => { %>
                        <div class="scale-item">
                            <h4><%= scale.name %> - <%= scale.instrument %></h4>
                            <p><strong>Base Note:</strong> <%= scale.base_note %></p>
                            <p><strong>Type:</strong> <%= scale.scale_type %></p>
                            <p><strong>Difficulty:</strong> <%= scale.difficulty %></p>
                            <p><strong>Progress:</strong> <%= scale.progress %>%</p>
                            <p><strong>Diagram:</strong> <%= scale.diagram %></p>
                            <button onclick="openModal('update-modal-<%= scale.id %>')">Update Scale</button>
                            <form action="/scales/delete/<%= scale.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="delete-btn">Delete Scale</button>
                            </form>

                            <div class="modal" id="update-modal-<%= scale.id %>">
                                <div class="modal-content">
                                    <button class="close-btn" onclick="closeModal('update-modal-<%= scale.id %>')">&times;</button>
                                    <h3>Update Scale</h3>
                                    <form action="/scales/update/<%= scale.id %>" method="POST">
                                        <input type="text" name="name" value="<%= scale.name %>" required>
                                        <input type="text" name="instrument" value="<%= scale.instrument %>" required>
                                        <input type="text" name="base_note" value="<%= scale.base_note %>" required>
                                        <input type="text" name="scale_type" value="<%= scale.scale_type %>" required>
                                        <input type="text" name="difficulty" value="<%= scale.difficulty %>" required>
                                        <textarea name="diagram"><%= scale.diagram %></textarea>
                                        <input type="number" step="0.01" name="progress" value="<%= scale.progress %>">
                                        <button type="submit">Update Scale</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <div class="photo-gallery card">
        <h3>Progresi Chord</h3>
        <div class="photo-container">
            <div class="photo"><img src="https://www.scales-chords.com/chord-charts/piano-C-c-n-l-C-E-G.jpg" alt="Photo 1"></div>
            <div class="photo"><img src="https://www.scales-chords.com/chord-charts/piano-D-d-n-l-D-Fs-A.jpg" alt="Photo 2"></div>
            <div class="photo"><img src="https://www.scales-chords.com/chord-charts/piano-E-e-n-l-E-Gs-B.jpg" alt="Photo 3"></div>
            <div class="photo"><img src="https://www.scales-chords.com/chord-charts/piano-F-f-n-l-F-A-C.jpg" alt="Photo 4"></div>
            <div class="photo"><img src="https://www.scales-chords.com/chord-charts/piano-G-g-n-l-G-B-D.jpg" alt="Photo 5"></div>
            <div class="photo"><img src="https://www.scales-chords.com/chord-charts/piano-A-a-n-l-A-Cs-E.jpg" alt="Photo 6"></div>
            <div class="photo"><img src="https://www.scales-chords.com/chord-charts/piano-B-b-n-l-B-Ds-Fs.jpg" alt="Photo 7"></div>
        </div>
    </div>

    <div class="schedules-section">
        <h2>Your Schedules</h2>
        <table>
            <thead>
                <tr>
                    <th>Progression Name</th>
                    <th>Instrument</th>
                    <th>Difficulty</th>
                    <th>Scheduled Date</th>
                    <th>Scheduled Time</th>
                    <th>Notes</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (schedules.length > 0) { %>
                    <% schedules.forEach(schedule => { %>
                        <tr>
                            <td><%= schedule.progression_name %></td>
                            <td><%= schedule.instrument %></td>
                            <td><%= schedule.difficulty %></td>
                            <td><%= schedule.scheduled_date.toDateString() %></td>
                            <td><%= schedule.scheduled_time %></td>
                            <td><%= schedule.notes %></td>
                            <td>
                                <form action="/schedules/update/<%= schedule.id %>" method="POST">
                                    <button type="submit">Edit</button>
                                </form>
                                <form action="/schedules/delete/<%= schedule.id %>" method="POST">
                                    <button type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="7">No schedules found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    
        <h3>Add New Schedule</h3>
        <form action="/schedules/add" method="POST">
            <input type="text" name="progression_name" placeholder="Progression Name" required>
            <input type="text" name="instrument" placeholder="Instrument">
            <select name="difficulty">
                <option value="Beginner">Beginner</option>
                <option value="Intermediate">Intermediate</option>
                <option value="Advanced">Advanced</option>
            </select>
            <input type="date" name="scheduled_date" required>
            <input type="time" name="scheduled_time" required>
            <textarea name="notes" placeholder="Notes"></textarea>
            <button type="submit">Add Schedule</button>
        </form>
    </div>
    
    <div class="achievements-section">
        <h2>Achievements</h2>
        <table>
            <thead>
                <tr>
                    <th>Achievement Name</th>
                    <th>Description</th>
                    <th>Awarded Date</th>
                </tr>
            </thead>
            <tbody>
                <% if (achievements.length > 0) { %>
                    <% achievements.forEach(achievement => { %>
                        <tr>
                            <td><%= achievement.achievement_name %></td>
                            <td><%= achievement.description %></td>
                            <td><%= new Date(achievement.awarded_date).toLocaleDateString() %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="3">No achievements found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    
        <h3>Add New Achievement</h3>
        <form action="/achievements/add" method="POST">
            <input type="text" name="achievement_name" placeholder="Achievement Name" required>
            <textarea name="description" placeholder="Description" rows="3"></textarea>
            <input type="date" name="awarded_date" placeholder="Awarded Date">
            <button type="submit">Add Achievement</button>
        </form>
    </div>
    

    <script>
        function openModal(modalId) {
            document.getElementById(modalId).style.display = 'flex';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }
        
        function logout() {
            fetch('/logout', {
                method: 'POST',
                credentials: 'include' 
            })
            .then(response => {
                if (response.redirected) {
                    window.location.href = response.url; 
                }
            })
            .catch(error => console.error('Error during logout:', error));
        }
    </script>
</body>
</html>
