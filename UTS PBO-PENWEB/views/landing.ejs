    <title>Landing Page</title>
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Optional Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: #fff;
            background: url('https://cdn.wallpaper.tn/large/4K-Music-Studio-Wallpaper-188385.jpg') no-repeat center center/cover;
            position: relative;
            overflow: hidden;
        }

        .main-container {
            display: flex;
            flex-direction: row;
        }

        h1 {
            font-size: 3rem;
            color: rgb(31, 45, 45); 
            text-shadow: 0 0 10px #0ff, 0 0 20px #0ff, 0 0 30px #0ff, 0 0 40px #0ff;
            animation: neon-flicker 1.5s infinite alternate;
        }

        p {
            font-size: 1.2rem;
            color: #ff0; 
            text-shadow: 0 0 10px #ff0, 0 0 20px #ff0;
            margin-bottom: 20px;
            animation: fade-in 2s ease-in-out;
        }

        .button-container {
            display: flex;
            gap: 15px;
            animation: fade-in 2.5s ease-in-out;
        }

        a {
            padding: 10px 20px;
            font-size: 1.2rem;
            color: #000;
            background: #0ff;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            text-align: center;
            transition: all 0.3s ease;
            box-shadow: 0 0 10px #0ff, 0 0 20px #0ff;
        }

        a:hover {
            color: #0ff;
            background: #000;
            box-shadow: 0 0 20px #0ff, 0 0 40px #0ff;
            transform: scale(1.1);
        }

        @keyframes neon-flicker {
            0% { opacity: 1; }
            50% { opacity: 0.7; }
            100% { opacity: 1; }
        }

        @keyframes fade-in {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .note {
            position: absolute;
            color: rgba(255, 255, 255, 0.196);
            font-size: 4rem;
            animation: float 5s linear infinite;
            pointer-events: none;
        }

        @keyframes float {
            from {
                transform: translateY(100vh) rotate(0deg);
            }
            to {
                transform: translateY(-100vh) rotate(360deg);
            }
        }

        .social-card {
            background-color: #1a1a1ab1; 
            border-radius: 10px;
            padding: 20px;
            margin-left: 20px;
            box-shadow: 0 0 15px rgba(144, 248, 248, 0.422); 
        }

        .social-icon {
            font-size: 2rem;
            margin: 10px;
            color: rgb(161, 167, 167); 
        }
    </style>
</head>
